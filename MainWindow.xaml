<mah:MetroWindow x:Class="MVP_Voltage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_Voltage"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:bhv="clr-namespace:MVP_Voltage.Behavior"
        xmlns:thm="clr-namespace:MVP_Voltage.Themes"
        xmlns:cvt="clr-namespace:MVP_Voltage.Converter"
        
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:view="clr-namespace:MVP_Voltage.View"
        Dialog:DialogParticipation.Register="{Binding}"
        mc:Ignorable="d"
        Title="Makinarocks" Height="450" Width="800">
    <mah:MetroWindow.DataContext>
        <local:MainWindowViewModel />
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TabControl Grid.Column="1" Grid.Row="0" >
            <TabItem Header="Video File Setting">
                <view:VideoFileSettingView DataContext="{Binding VideoFileSettingViewModel}" />
            </TabItem>
            <TabItem Header="ROI Setting">
                <view:CamSettingView DataContext="{Binding CamSettingViewModel}" />
            </TabItem>
            
        </TabControl>

        <GroupBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Header="Log">
            <TextBox Text="{Binding LogsText, Mode=OneWay}" TextWrapping="Wrap" IsReadOnly="True" />
            <!--<ListBox  ItemsSource="{Binding Logs}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding Mode=OneWay}" IsReadOnly="True" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>-->

        </GroupBox>
    </Grid>
</mah:MetroWindow>
