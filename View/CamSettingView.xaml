<UserControl x:Class="MVP_Voltage.View.CamSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVP_Voltage.View"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:cvt="clr-namespace:MVP_Voltage.Converter"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:thm="clr-namespace:MVP_Voltage.Themes"
             xmlns:util="clr-namespace:MVP_Voltage.Util"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Column="0" Grid.Row="0">
            <GroupBox Header="Master ROI">
                <StackPanel Orientation="Vertical">
                    <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.MasterROI.X}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="Master ROI X" />
                    <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.MasterROI.Y}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="Master ROI Y" />
                    <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.MasterROI.Width}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="Master ROI Width" />
                    <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.MasterROI.Height}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="Master ROI Height" />
                    <Button Content="Calc" Command="{Binding CommandCalcBrightness}" />
                    <TextBlock Text="{Binding Brightness}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <ItemsControl ItemsSource="{Binding CamList}" Grid.Column="0" >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock >
<Run Text="{Binding ModelName}" />
<Run Text=":" />
<Run Text="{Binding SerialNumber}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Grid.Column="1" Command="{Binding CommandRefreshCamList}" >
                            <ContentControl Style="{StaticResource IconStyle}" Content="{x:Static iconPacks:PackIconPhosphorIconsKind.ArrowClockwiseBold}" />
                        </Button>
                    </Grid>
                    <GroupBox Header="Cam1">
                        <StackPanel>
                            <ComboBox ItemsSource="{Binding CamList}" SelectedItem="{Binding SelectedCam1}" >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock >
    <Run Text="{Binding ModelName}" />
    <Run Text=":" />
    <Run Text="{Binding SerialNumber}" />
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <StackPanel>
                                <Button Content="Connect" IsEnabled="{Binding ConnectedCam1, Converter={cvt:BoolInvertConverter}}" Command="{Binding CommandConnectCam}" CommandParameter="Cam1" />
                                <Button Content="DisConnect" IsEnabled="{Binding ConnectedCam1}" Command="{Binding CommandDisConnectCam}" CommandParameter="Cam1" />
                                <Button Content="Snap" IsEnabled="{Binding ConnectedCam1}" Command="{Binding CommandSnapCam}" CommandParameter="Cam1" />
                                <Button Content="Grab" IsEnabled="{Binding ConnectedCam1}" Command="{Binding CommandGrabCam}" CommandParameter="Cam1" />
                            </StackPanel>

                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </ScrollViewer>


        <GroupBox Grid.Column="0" Grid.Row="1" Header="OCR ROI">
            <StackPanel Orientation="Vertical">
                <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.OCRROI.X}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="OCR ROI X" />
                <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.OCRROI.Y}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="OCR ROI Y" />
                <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.OCRROI.Width}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="OCR ROI Width" />
                <mah:NumericUpDown Value="{Binding _mainWindowViewModel.Settings.OCRROI.Height}" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.Watermark="OCR ROI Height" />

                <GroupBox Header="Cam2">
                    <StackPanel>
                        <ComboBox ItemsSource="{Binding CamList}" SelectedItem="{Binding SelectedCam2}" >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock >
    <Run Text="{Binding ModelName}" />
    <Run Text=":" />
    <Run Text="{Binding SerialNumber}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <StackPanel>
                            <Button Content="Connect" IsEnabled="{Binding ConnectedCam2, Converter={cvt:BoolInvertConverter}}" Command="{Binding CommandConnectCam}" CommandParameter="Cam2" />
                            <Button Content="DisConnect" IsEnabled="{Binding ConnectedCam2}" Command="{Binding CommandDisConnectCam}" CommandParameter="Cam2" />
                            <Button Content="Snap" IsEnabled="{Binding ConnectedCam2}" Command="{Binding CommandSnapCam}" CommandParameter="Cam2" />
                            <Button Content="Grab" IsEnabled="{Binding ConnectedCam2}" Command="{Binding CommandGrabCam}" CommandParameter="Cam2" />
                        </StackPanel>

                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </GroupBox>

        <ScrollViewer Grid.Column="1" Grid.Row="0" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <util:CommonCanvasView DataContext="{Binding Cam1ImageControl}" Roi="{Binding DataContext._mainWindowViewModel.Settings.MasterROI, ElementName=Root}"
                                   RoiDimOpacity="0.2" IsRoiVisible="True" RoiHandleSize="12"/>
        </ScrollViewer>

        <ScrollViewer Grid.Column="1" Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <util:CommonCanvasView DataContext="{Binding Cam2ImageControl}" Roi="{Binding DataContext._mainWindowViewModel.Settings.MasterROI, ElementName=Root}"
                       RoiDimOpacity="0.2" IsRoiVisible="True" RoiHandleSize="12"/>
        </ScrollViewer>

    </Grid>
</UserControl>
